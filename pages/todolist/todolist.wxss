.mini-btn {
  margin-right: 10rpx;
  width:95%; 
  color: #222; 
  font-weight: 500; 
  /* border: 1rpx solid #222; */
}

.todo-list-layout {
  /* padding: 20rpx; */
	border-bottom: 1rpx solid #e7e7e7;
}

.todo-list-text {
  font-weight: 200;
	font-size: 30rpx;
	padding-left: 20rpx;
}

.checked-item {
	color: #7e7e7e;
	text-decoration:line-through;
}

.btn_checked {
	/* text-decoration: underline; */
	border-radius: 10rpx;
	border: 1rpx solid #e7e7e7;
}

.todo-clear {
	float:right; 
	text-decoration: underline;
}

