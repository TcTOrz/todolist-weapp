/* pages/todolist/todolist.wxss */
@import '/miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss';
.page-section {
  background: #fff;
  margin: 50rpx 0px 40rpx 0px;
  position: relative;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2),
    0 25px 50px 0 rgba(0, 0, 0, 0.1);
  width: 90%;
}

.page-section-text {
  position: absolute;
	/* top: -155px; */
	top: -250rpx;
  width: 100%;
  /* font-size: 100px;
	font-weight: 100px; */
	font-size: 150rpx;
	font-weight: 200rpx;
  text-align: center;
  color: rgba(175, 47, 47, 0.15);
}

.placeholder-class {
	font-style: italic;
	font-weight: 300;
	color: #e6e6e6;
}

.new-todo {
  padding: 16px 16px 16px 60px;
  border: none;
  background: rgba(0, 0, 0, 0.003);
  box-shadow: inset 0 -2px 1px rgba(0, 0, 0, 0.03);
}

.main {
  position: relative;
  z-index: 2;
  border-top: 1px solid #e6e6e6;
}

.toggle-all {
	width: 1px;
	height: 1px;
	border: none; /* Mobile Safari */
	opacity: 0;
	position: absolute;
	right: 100%;
	bottom: 100%;
}

.toggle-all + label {
	width: 60px;
	height: 34px;
	font-size: 0;
	position: absolute;
	top: -46px;
	left: -13px;
	-webkit-transform: rotate(0deg);
  transform: rotate(0deg);
  color: #e6e6e6;
}

.toggle-all + label::before {
	content: '‚ùØ';
	font-size: 22px;
	padding: 10px 27px 10px 27px;
}

.is_checked {
  top: -52px !important;
  -webkit-transform: rotate(90deg) !important;
  transform: rotate(90deg) !important;
  color: #737373 !important;
}

.todo-list {
  margin: 0;
	padding: 0;
	list-style: none;
	max-height: 500rpx;
	min-height: 100rpx;
	overflow: scroll;
}

.todo-list label {
  position: relative;
	font-size: 24px;
	border-bottom: 1px solid #ededed;
}

.todo-list label:last-child {
	border-bottom: none;
}

/* .todo-list .editing {
	border-bottom: none;
	padding: 0;
} */

.footer {
	color: #777;
	padding: 10px 15px;
	/* height: 50px; */
	text-align: center;
	border-top: 1px solid #e6e6e6;
}

.footer:before {
	content: '';
	position: absolute;
	right: 0;
	bottom: 0;
	left: 0;
	height: 50px;
	overflow: hidden;
	box-shadow: 0 1px 1px rgba(0, 0, 0, 0.2),
	            0 8px 0 -3px #f6f6f6,
	            0 9px 1px -3px rgba(0, 0, 0, 0.2),
	            0 16px 0 -6px #f6f6f6,
	            0 17px 2px -6px rgba(0, 0, 0, 0.2);
}

.todo-count {
	float: left;
}

.todo-clear {
  float: right;
}
/* .todo-count strong {
	font-weight: 300;
} */

.footer-text {
  width: 100%;
  height: 25px;
}

.footer-btn {
  width: 100%;
}

.filters {
	margin: 0;
	padding: 0;
	list-style: none;
	position: absolute;
	right: 0;
	left: 0;
}

.filters label view {
	display: inline;
}
